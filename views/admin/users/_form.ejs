<div class="container-fluid">
	<div class="col-md-offset-3 col-md-6 col-lg-offset-4 col-lg-4">
		<form id="<%= type %>-user-form" action="/admin/<%= action %>" method="<%= method %>" class="form">
			<div class="form-group">
				<input id="name" name="name" type="text" placeholder="Name" class="form-control" value="<%- form.name %>" />
			</div>
			<div class="form-group">
				<input id="email" name="email" type="email" placeholder="Email" class="form-control" value="<%- form.email %>" />
			</div>
			<div class="form-group">
				<input id="phone" name="phone" type="tel" placeholder="phone" class="form-control" value="<%- form.phone %>" />
			</div>
			<div class="form-group">
				<input id="password" name="password" type="text" placeholder="password" class="form-control" value="<%- form.password %>" />
			</div>
			<div class="form-group">
				<label>
					<input id="is_admin" name="is_admin" type="checkbox" class="" value="1" <%- form.is_admin ? 'checked="checked"' : '' %> />
					<input name="is_admin" type="hidden" value="0" />
					Is Admin?
				</label>
			</div>
			<div class="form-group mb-none text-right">
				<a href="/admin/users/" class="btn btn-default">Back to List</a>
				<button class="btn btn-primary" type="submit">Submit</button>
			</div>
		</form>
	</div>
</div>
