<%- include('../../shared/html-head') %>
	<div class="container">
		<div class="page-header">
			<h1><%= title %></h1>
		</div>

		<% if ( flash.hasMessage( session ) ) { %>
			<%- flash.showMessage( session ) %>
		<% } %>

		<div class="text-right mb-sm">
			<a href="/admin/users/new" class="btn btn-primary">Add User</a>
		</div>

		<table class="table table-striped table-bordered">
			<tbody>
				<% if ( !!users && users.length > 0 ) { %>
					<% for( var i in users ) { %>
						<tr>
							<td><%- users[ i ].name %></td>
							<td><%- users[ i ].email %></td>
							<td><%- users[ i ].phone %></td>
							<td>
								<a href="/admin/users/<%= users[ i ].id %>/edit">Edit</a>
								<% if ( currentUser.id != users[ i ].id ) { %>
									<a href="/admin/users/<%= users[ i ].id %>/remove">Remove</a>
								<% } %>
							</td>
						</tr>
					<% } %>
				<% } else { %>
				<tr>
					<td>
						<p class="text-muted text-center mb-none">No users found</p>
					</td>
				</tr>
				<% } %>
			</tbody>
		</table>
	</div>
<%- include('../../shared/html-footer') %>
